SECRET_KEY=change-this-in-production
DEBUG=True

# Django host/origin config
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com
FRONTEND_URL=http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173
CORS_ALLOWED_ORIGIN_REGEXES=^https://scannivibe-frontend-.*\\.vercel\\.app$
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Database
# Local dev can omit DATABASE_URL and use sqlite.
# Render will inject DATABASE_URL automatically from render.yaml.
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_SSL_REQUIRE=True

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@mexicapp.com

# Logging
LOG_LEVEL=INFO
